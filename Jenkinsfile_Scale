pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kubectl-agent
spec:
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    # ×”×˜×¨×™×§ ×©××•× ×¢ × ×™×ª×•×§×™×: ×¤×§×•×“×ª ×©×™× ×” ××™× ×¡×•×¤×™×ª
    command:
    - sleep
    - infinity
    resources:
      requests:
        memory: "64Mi"
        cpu: "50m"
"""
        }
    }
    
    parameters {
        choice(name: 'REPLICAS', choices: ['3', '1', '5', '0'], description: 'Choose number of replicas')
    }

    stages {
        stage('Action') {
            steps {
                container('kubectl') {
                    script {
                        echo "ğŸ”Œ Connected to cluster!"
                        
                        echo "ğŸš€ Scaling deployment to ${params.REPLICAS}..."
                        sh "kubectl scale deployment devops-dice-game --replicas=${params.REPLICAS} -n devops"
                        
                        echo "â³ Verifying..."
                        sleep 2
                        sh "kubectl get pods -n devops -l app=dice-game"
                    }
                }
            }
        }
    }
}
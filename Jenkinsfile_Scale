        }
    }
    
    parameters {
        choice(name: 'REPLICAS', choices: ['3', '1', '5', '0'], description: 'Choose Replicas')
    }

    stages {
        stage('Action') {
            steps {
                container('kubectl') {
                    script {
                        echo "ğŸ”Œ Checking connectivity..."
                        // ×–×” ×‘×“×™×§×ª ×”×©×¤×™×•×ª ×”×¨××©×•× ×”
                        sh "kubectl get nodes"
                        
                        echo "ğŸš€ Scaling to ${params.REPLICAS}..."
                        sh "kubectl scale deployment devops-dice-game --replicas=${params.REPLICAS} -n devops"
                        
                        echo "âœ… Verifying..."
                        sh "kubectl get pods -n devops -l app=dice-game"
                    }
                }
            }
        }
    }
}
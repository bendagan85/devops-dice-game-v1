pipeline {
    agent {
        kubernetes {
            serviceAccount 'jenkins'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kubectl-agent
spec:
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    command:
    - cat
    tty: true
    resources:
      requests:
        memory: "1Mi"   # <--- השקר הגדול: אנחנו טוענים שזה לא לוקח זיכרון
        cpu: "1m"       # <--- כנ"ל לגבי מעבד
      limits:
        memory: "512Mi" # אבל נותנים לו תקרה גבוהה אם הוא יצליח לקחת
        cpu: "500m"
  - name: jnlp
    resources:
      requests:
        memory: "1Mi"   # גם האייג'נט של ג'נקינס עצמו
        cpu: "1m"
"""
        }
    }
    
    parameters {
        string(name: 'REPLICAS', defaultValue: '3', description: 'Scale to how many?')
    }

    stages {
        stage('Scale Deployment') {
            steps {
                container('kubectl') {
                    script {
                        echo "Force scaling to ${params.REPLICAS} replicas..."
                        sh "kubectl scale deployment devops-dice-game --replicas=${params.REPLICAS} -n devops"
                        sh "kubectl get pods -n devops"
                    }
                }
            }
        }
    }
}
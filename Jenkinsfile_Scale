pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kubectl-agent
spec:
  # ×–×” ×§×¨×™×˜×™: ×©×™××•×© ×‘××©×ª××© ×©× ×ª× ×• ×œ×• ×”×¨×©××•×ª ××“××™×Ÿ

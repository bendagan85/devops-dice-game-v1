pipeline {
    agent {
        kubernetes {
            // ×–×” ×”×—×œ×§ ×©××•××¨ ×œ×’'× ×§×™× ×¡: "×ª×¨×™× ×¤×•×“ ×—×“×© ×œ×¢×‘×•×“×” ×”×–×•"
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kubectl-agent
spec:
  serviceAccountName: jenkins
  containers:
  - name: kubectl
    image: dtzar/helm-kubectl:latest
    command: ["sleep", "infinity"]
    resources:
      requests:
        memory: "128Mi"
        cpu: "100m"
"""
        }
    }
    
    parameters {
        choice(name: 'REPLICAS', choices: ['3', '1', '5', '0'], description: 'Choose number of replicas')
    }

    stages {
        stage('Action') {
            steps {
                // ×›××Ÿ ×× ×—× ×• × ×›× ×¡×™× ×œ×ª×•×š ×”×§×•× ×˜×™×™× ×¨ ×©×”×¨×× ×• ×œ××¢×œ×”
                container('kubectl') {
                    script {
                        echo "ğŸš€ Scaling to ${params.REPLICAS} replicas..."
                        
                        // ×‘×™×¦×•×¢ ×”×¡×§×™×™×œ×™× ×’ ×‘-Namespace ×”× ×›×•×Ÿ
                        sh "kubectl scale deployment devops-dice-game --replicas=${params.REPLICAS} -n devops"
                        
                        echo "âœ… Verifying status..."
                        // ×‘×“×™×§×” ×©×”×¤×•×“×™× ×‘×××ª ×¢×•×œ×™×/×™×•×¨×“×™×
                        sh "kubectl get pods -n devops"
                    }
                }
            }
        }
    }
}
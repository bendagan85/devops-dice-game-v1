pipeline {
    agent {
        kubernetes {
            // ××’×“×™×¨×™× ×¤×•×“ ×©×™×©××© ×›××™×™×’'× ×˜ ×œ×‘×™×¦×•×¢ ×”×¤×§×•×“×•×ª
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kubectl-agent
spec:
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    command:
    - cat
    tty: true
    resources:
      requests:
        memory: "128Mi"  # ×“×¨×™×©×” ×”×’×™×•× ×™×ª ×•×¦× ×•×¢×”
        cpu: "100m"
"""
        }
    }
    
    parameters {
        choice(name: 'REPLICAS', choices: ['1', '3', '5', '0'], description: 'How many replicas do you want?')
    }

    stages {
        stage('Check Current Status') {
            steps {
                container('kubectl') {
                    script {
                        echo "ğŸ” Checking current deployment status..."
                        sh "kubectl get pods -n devops -l app=dice-game"
                    }
                }
            }
        }

        stage('Perform Scaling') {
            steps {
                container('kubectl') {
                    script {
                        echo "ğŸš€ Scaling deployment to ${params.REPLICAS} replicas..."
                        sh "kubectl scale deployment devops-dice-game --replicas=${params.REPLICAS} -n devops"
                    }
                }
            }
        }

        stage('Verify Rollout') {
            steps {
                container('kubectl') {
                    script {
                        echo "âœ… Verifying new status..."
                        // × ×•×ª×Ÿ ×œ××¢×¨×›×ª ×©× ×™×” ×œ×”×ª××¤×¡
                        sleep 2
                        sh "kubectl get pods -n devops -l app=dice-game"
                    }
                }
            }
        }
    }
}
pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kubectl-agent
spec:
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    # ×©×™× ×•×™ 1: ×¤×§×•×“×” ×™×¦×™×‘×” ×™×•×ª×¨ ×œ×”×—×–×§×ª ×”×§×•× ×˜×™×™× ×¨
    command:
    - sleep
    - infinity
    # ×©×™× ×•×™ 2: ×”×•×¨×“× ×• ××ª tty: true ×©×”×™×” ×ª×•×§×¢ ××ª ×”×¤×§×•×“×”
    resources:
      requests:
        memory: "64Mi"
        cpu: "50m"
"""
        }
    }
    
    parameters {
        choice(name: 'REPLICAS', choices: ['3', '1', '5', '0'], description: 'Desired Replicas')
    }

    stages {
        stage('Debug & Scale') {
            steps {
                container('kubectl') {
                    script {
                        // ×‘×“×™×§×ª ×ª×§×©×•×¨×ª ×‘×¡×™×¡×™×ª - ×‘×œ×™ ×¤×§×•×“×•×ª ××•×¨×›×‘×•×ª
                        sh "kubectl version --client"
                        
                        echo "ğŸš€ Scaling to ${params.REPLICAS}..."
                        // ×”×¤×§×•×“×” ×¢×¦××”
                        sh "kubectl scale deployment devops-dice-game --replicas=${params.REPLICAS} -n devops"
                        
                        echo "âœ… Done! Checking pods:"
                        sh "kubectl get pods -n devops -l app=dice-game"
                    }
                }
            }
        }
    }
}
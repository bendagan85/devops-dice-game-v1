pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kubectl-agent
spec:
  serviceAccountName: jenkins
  containers:
  - name: kubectl
    # ×©×™× ×•×™ ××¡×˜×¨×˜×’×™: ××™××’' ×©××›×™×œ ××¢×˜×¤×ª ××œ××” (××•× ×¢ ×ª×§×™×¢×•×ª)
    image: dtzar/helm-kubectl:latest
    # ×¤×§×•×“×” ×©××©××™×¨×” ××ª ×”×¤×•×“ ×“×•×œ×§ ×‘×œ×™ ×œ×”×¤×¨×™×¢
